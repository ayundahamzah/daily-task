<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Assign Task</title>
  </head>
  <body><center>
    <table>
      <tr>
        <th>Employee</th>
        <th>Task</th>
        <th></th>
      </tr>
      <tr>
        <form class="" action="/users/assignTask" method="post">
          <td>
          <select class="" name="userId">
            <% dataUsers.forEach(function(user){ %>
              <% if(user.UserTasks == '' || user.UserTasks.status == 'done') { %>
                <option value="<%= user.id %>"><%= user.name %></option>
              <% } %>
            <% }) %>
          </select>
          </td>
          <td>
          <select class="" name="taskId">
            <% dataTasks.forEach(function(task){ %>
              <option value="<%= task.id %>"><%= task.Task %></option>
            <% }) %>
          </select>
          </td>
          <td>
          <input type="submit" name="" value="Add">
          </td>
        </form>
      </tr>
    </table>
    <br>
    <h2>Task Monitor</h2>
    <table border='1' style = 'text-align: center'>
      <tr>
        <th>No</th>
        <th>Employee</th>
        <th>Task</th>
        <th>Status</th>
        <th>ETA</th>
      </tr>
      <% let count =1 %>
      <% dataUserTasks.forEach(function(userTask){ %>
        <tr>
          <td><%= count %></td>
          <td><%= userTask.User.name %></td>
          <td><%= userTask.Task.Task %></td>
          <td><%= userTask.status %></td>
          <td><%= userTask.Task.estimatedTimeOfWork %> minutes</td>
        </tr>
        <% count++ %>
      <% }) %>
    </table>
  </center></body>
</html>